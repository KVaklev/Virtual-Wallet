@model Currency

<!-- Secondary menu
  ============================================= -->
<div class="bg-primary">
    <div class="container d-flex justify-content-center">
        <ul class="nav nav-pills alternate nav-lg border-bottom-0">
            <li class="nav-item"> <a class="nav-link active" href="send-money.html">Delete</a></li>
        </ul>
    </div>
</div>
<!-- Secondary menu end -->
<!-- Content
============================================= -->
<div id="content" class="py-4">
    <div class="container">

        
        <h2 class="fw-400 text-center mt-3">Delete Currency</h2>

        <p class="lead text-center mb-4">
            Are you sure you want to delete this Currency?<br>
            Please review the details below before proceeding:
        </p>
        <div class="row">
            <div class="col-md-9 col-lg-7 col-xl-6 mx-auto">
                <div class="bg-white shadow-sm rounded p-3 pt-sm-4 pb-sm-5 px-sm-5 mb-4">
                    <!-- Request Money Confirm Details
                    ============================================= -->
                    <a asp-action="Index" asp-controller="Currency" class="btn-close text-2 float-end" aria-label="Close"></a>
                    <h3 class="text-5 fw-400 mb-3 mb-sm-4">Details</h3>
                    <hr class="mx-n3 mx-sm-n5 mb-4">
                    <div class="row g-3 align-items-center">
                        <p class="col-sm-4 text-muted text-sm-end mb-0 mb-sm-3">Name:</p>
                        <p class="col-sm-8 text-3">@Model.Name</p>
                    </div>
                    <div class="row g-3 align-items-center">
                        <p class="col-sm-4 text-muted text-sm-end mb-0 mb-sm-3">Currency Code:</p>
                        <p class="col-sm-8 text-3">@Model.CurrencyCode</p>
                    </div>

                    <div class="row g-3 align-items-center">
                        <p class="col-sm-4 text-muted text-sm-end fw-500 mb-0 mb-sm-3">You Send:</p>
                        <p class="col-sm-8 text-4 fw-500">@Model.Country</p>
                    </div>

                   
                    <form id="form-send-money" method="post">
                        <div class="d-grid"><button class="btn btn-primary">Delete</button></div>
                    </form>
                    
                    <!-- Request Money Confirm Details end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content end -->
